<div class="header">
  <h4>Edita tu perfil</h4>
</div>
<div class="container edit-profile">
  <div class="content-edit">
    <div class="edit-image align-center">
      <img src="{{session.image}}" alt="">
    </div>
    <form action="/splash" method="POST">
      <div class="form-group align-center">
        <label for="exampleFormControlFile1">Modifica o añade tu foto de perfil</label>
        <input type="file" class="form-control-file" id="exampleFormControlFile1">
      </div>
      <div class="form-group">
        <label for="name">Nombre</label>
        <input
          type="text"
          class="form-control
          {{#if errors.name }}is-invalid{{/if}}"
          name="name"
          placeholder="Nombre"
          value="{{ session.name }}"
          minlength="5"
          required/>
        {{#if errors.name }}
          <div class="invalid-feedback">
            {{ errors.name }}
          </div>
        {{/if}}
      </div>
      <div class="form-group">
        <label for="age">Edad</label>
        <input type="age" class="form-control" id="age" placeholder="Escribe tu edad" required>
      </div>
      <div class="form-group">
        <label for="formControlRange">Filtro de edad</label>
        <input type="range" class="form-control-range" id="formControlRange" required>
      </div>
      
      <div class="row align-left">
        <div class="col-6">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
              Música
            </label>
          </div>
        </div>
        <div class="col-6">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
            <label class="form-check-label" for="defaultCheck2">
              Deporte
            </label>
          </div>
        </div>
      </div>

      <div class="row align-left">
        <div class="col-6">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
              Comida
            </label>
          </div>
        </div>
        <div class="col-6">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
            <label class="form-check-label" for="defaultCheck2">
              Motos
            </label>
          </div>
        </div>
      </div>
      <div class="row align-center">
        <div class="col">
          <button type="submit" class="btn btn-danger btn-lg mt-5">SIGUIENTE</button>
        </div>
      </div>
    </form>
  </div>
</div>