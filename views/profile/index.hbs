<div class="header-menu">
  <h4>Tu profila</h4>
</div>
<div class="container edit-profile">
  <div class="content-edit">
    <div class="edit-image align-center">
      <img src="{{session.image}}" alt="">
    </div>
    <form action="/profile/edit" method="POST">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
        </div>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
          <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
        </div>
      </div>

      <div class="form-group">
        <label for="name">Nombre</label>
        <input
          type="text"
          class="form-control
          {{#if errors.name }}is-invalid{{/if}}"
          name="name"
          placeholder="Nombre"
          value="{{ session.name }}"
          minlength="5"
          required/>
        {{#if errors.name }}
          <div class="invalid-feedback">
            {{ errors.name }}
          </div>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="age">Edad</label>
        <input
          type="number"
          name="age"
          min="18"
          max="100"
          class="form-control"
          id="age"
          placeholder="Escribe tu edad"
          required>
      </div>

      <div class="form-group">
        <label for="formControlRange">Filtro de edad</label>
        <input type="range" class="form-control-range" id="formControlRange" required>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01">Sexo</label>
        </div>
        <select name="gender" class="custom-select" id="inputGroupSelect01" required>
          <option value="" selected disabled>Elige tu sexo</option>
¡         <option value="mujer">Mujer</option>
          <option value="hombre">Hombre</option>
        </select>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect02">Me interesan</label>
        </div>
        <select name="lookingFor" class="custom-select" id="inputGroupSelect02" required>
          <option value="" selected disabled>Elige tu orientación sexual</option>
          <option value="hombre">Hombres</option>
          <option value="mujer">Mujeres</option>
          <option value="todos">Todos</option>
        </select>
      </div>

      <div class="row align-center">
        <div class="col">
          <button type="submit" class="btn btn-danger btn-lg mt-5">SIGIENTEA</button>
        </div>
      </div>
    </form>
  </div>
</d